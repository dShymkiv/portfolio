{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "block-scoped-var": "error",
    "semi": "error",
    "complexity": "error",
    "constructor-super": "error",
    "camelcase": "off",
    "curly": "off",
    "default-case": "off",
    "no-case-declarations": "off",
    "dot-notation": "error",
    "eol-last": "error",
    "eqeqeq": "error",
    "guard-for-in": "off",
    "global-require": "off",
    "max-len": [ "warn",{"code": 140}],
    "no-trailing-spaces": "off",
    "no-console": "off",
    "indent": [
      "warn",
      2,
      { "SwitchCase": 1 }
    ],
    "new-parens": "error",
    "no-alert": "error",
    "no-duplicate-imports": "error",
    "no-nested-ternary": "error",
    "no-mixed-spaces-and-tabs": "error",
    "no-bitwise": "error",
    "no-caller": "error",
    "no-cond-assign": "error",
    "no-multi-spaces": "error",
    "no-multi-str": "error",
    "no-multiple-empty-lines": "error",
    "no-unused-expressions": "error",
    "no-new": "error",
    "comma-dangle": "off",
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off",
    "no-unused-vars": ["error",{"args": "none"}],
    "no-underscore-dangle": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  }
}
